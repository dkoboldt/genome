subtest "deletion" => sub {
    my $interpreter = $pkg->create(sample_names => ["S1"]);
    lives_ok(sub {$interpreter->validate}, "Interpreter validates");

    my %expected = (
        A => {
            S1_vaf => 5.81395348837209,
