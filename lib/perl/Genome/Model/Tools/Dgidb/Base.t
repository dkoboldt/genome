#!/usr/bin/env genome-perl

BEGIN { 
    $ENV{UR_DBI_NO_COMMIT} = 1;
    $ENV{UR_USE_DUMMY_AUTOGENERATED_IDS} = 1;
}

use strict;
use warnings;

use above "Genome";
use Test::More;

my $class = "Genome::Model::Tools::Dgidb::Base";
my %hash1 = (category => "kinase");
my $string = Genome::Model::Tools::Dgidb::Base->params_to_query_string(\%hash1);
is($string, "?category=kinase", "Params correctly made into query string");

my %hash2 = (category => "kinase", gene => "FLT3");
my $multi_string = Genome::Model::Tools::Dgidb::Base->params_to_query_string(\%hash2);

is($multi_string, "?category=kinase,gene=FLT3", "Multiple params correctly made into query string");

done_testing;
